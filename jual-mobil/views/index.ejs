<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">Katalog Mobil Terbaru</h1>
    <p class="col-md-8 fs-4">Temukan mobil impian Anda dengan penawaran terbaik dari kami.</p>
  </div>
</div>

<div class="mb-4 text-center">
  <a href="/" class="btn btn-success">All</a>
  <a href="/?kategori=SUV" class="btn btn-outline-success">SUV</a>
  <a href="/?kategori=MPV" class="btn btn-outline-success">MPV</a>
  <a href="/?kategori=Hatchback" class="btn btn-outline-success">Hatchback</a>
  <a href="/?kategori=Commercial" class="btn btn-outline-success">Commercial</a>
</div>

<div class="row">
  <% mobil.forEach(m => { %>
  <div class="col-md-4 col-lg-3 mb-4">
    <div class="card h-100 shadow-sm">
      <img src="<%= m.gambar %>" class="card-img-top" alt="<%= m.nama %>" style="height: 180px; object-fit: cover" />
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= m.nama %></h5>
        <p class="card-text text-muted"><%= m.harga %></p>
        <a href="/mobil/<%= m.id %>" class="btn btn-success mt-auto">Explore More</a>
      </div>
    </div>
  </div>
  <% }) %>
</div>
